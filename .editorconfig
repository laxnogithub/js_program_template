# EditorConfig is awesome: https://EditorConfig.org

##############说明##############
#1.统一换行符
#2.统一文末换行
#3.统一字符集
#4.统一空行为tab
################################

# 标识为最顶层的配置文件
root = true

# 始终在文件末尾插入一个新行
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset  对于所有的js,vue文件，设置文件字符集为utf-8
[*.{js,vue}]
charset = utf-8
indent_style = tab
